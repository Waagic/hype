{% extends 'base.html.twig' %}

{% block header %}
    <header class="home-header mb-5">
        <a class="nes-btn d-flex justify-content-center align-items-center ml-3 ml-md-5" href="{{ path('app_index') }}">hype.</a>
        <a class="nes-btn is-primary mr-3 mr-md-5" href="{{ path('profile_index') }}"><i class="nes-logo"></i></a>
    </header>
{% endblock %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container">
        <div class="infos nes-container with-title mt-5">
            <p class="title">B'soir</p>
            {{ form_start(form) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}

            <button class="nes-btn" type="submit">Register!</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
